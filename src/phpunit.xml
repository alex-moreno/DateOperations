<phpunit colors="true" bootstrap="AvantiDates/tests/bootstrap.php">
  <php>
    <!--  Set error reporting to E_ALL.  -->
    <ini name="error_reporting" value="32767"/>
    <!--
     Do not limit the amount of memory tests take to run.
    -->
    <ini name="memory_limit" value="-1"/>
  </php>
  <testsuites>
    <testsuite name="PHP Date Challenge">
      <directory>tests</directory>
        <directory>modules/custom/*/tests</directory>
        <directory>AvantiDates/tests</directory>
    </testsuite>
  </testsuites>
  <!--  Filter for coverage reports.  -->
  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">modules/custom</directory>
    <exclude>
      <directory suffix=".module">modules/custom</directory>
      <directory suffix=".php">modules/custom/*/tests</directory>
      <directory suffix=".php">modules/shared/*/tests</directory>
      <directory suffix=".php">modules/custom/address_book/classes</directory>
      <directory suffix=".php">modules/custom/address_book/modules/address_book_ui/classes</directory>
      <directory suffix=".php">modules/custom/b2b_entityreference/plugins</directory>
    </exclude>
    </whitelist>
  </filter>
  <!--  Exclude Groups  -->
  <groups>
    <exclude>
      <group>active_cordys_requests</group>
      <group>disabled</group>
      <group>integrationtest</group>
    </exclude>
  </groups>
</phpunit>
